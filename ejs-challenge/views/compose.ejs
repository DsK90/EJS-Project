<%- include partials/header -%>

<h1>Compose</h1>

<form class="" action="/compose" method="post">
    <div class="form-group">
      <label for="formTitle">Title</label>
      <input class="form-control" type="text" name="composeTitle" value="" id="formTitle">
    </div>
    <div class="form-group">
      <label for="formPost">Post</label>
      <textarea class="form-control" id="formPost" name="composeText" rows="5"></textarea>
    </div>
  <button type="submit" name="button" class="btn btn-primary" >Publish</button>
</form>

